# Auth0 Configuration for Backend API
AUTH0_DOMAIN="your-auth0-domain.us.auth0.com"
AUTH0_API_AUDIENCE="https://your-api-identifier"
AUTH0_CLIENT_ID="your-backend-api-client-id" # This is likely for your regular web app, not M2M
AUTH0_CLIENT_SECRET="your-backend-api-client-secret" # This is likely for your regular web app, not M2M

# Auth0 Configuration for Machine-to-Machine (M2M) Application
# Use the Client ID and Client Secret from the M2M app you created
AUTH0_M2M_CLIENT_ID="your-m2m-client-id"
AUTH0_M2M_CLIENT_SECRET="your-m2m-client-secret"

# Flask Configuration
SECRET_KEY="a-very-secret-key-replace-this"
FLASK_ENV="development"
API_HOST="0.0.0.0"
API_PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# Database URL for Scheduler (SQLite example)
DATABASE_URL="sqlite:///data/scheduler.db"

# Set to 'true' to skip authentication for development (DANGER: DO NOT USE IN PRODUCTION)
SKIP_AUTH="false"
